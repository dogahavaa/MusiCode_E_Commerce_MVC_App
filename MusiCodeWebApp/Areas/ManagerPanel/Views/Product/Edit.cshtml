@model MusiCodeWebApp.Models.Product
@{
    ViewBag.Title = "Ürün Düzenle";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}
@section styles
{

    <link href="~/Areas/ManagerPanel/Assets/css/FormStyle.css" rel="stylesheet" />
}

<div class="pagetitle">
    <h2>Ürün Düzenle</h2>
</div>
<div class="formContainer">
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.ID)
        @Html.HiddenFor(x => x.Image)

        if (ViewBag.hataMesaji != null)
        {
            <label class="validationmesage">@ViewBag.hataMesaji</label>
        }
        <div class="row">
            <label>İsim</label><br />
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "validationmesage" })
        </div>

        <div class="row">
            <label>Ürün Açıklaması</label><br />
            @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(x => x.Description, null, new { @class = "validationmesage" })
        </div>

        <div class="row">
            <label>Kategori Seç</label>
            @Html.DropDownList("Category_ID", null, htmlAttributes: new { @class = "textbox" })
        </div>

        <div class="row">
            <label>Marka Seç</label>
            @Html.DropDownList("Brand_ID", null, htmlAttributes: new { @class = "textbox" })
        </div>

        <div class="row">
            <label>Fiyat</label><br />
            @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @class = "numerictextbox" } })
        </div>

        <div class="row">
            <label>Stok</label><br />
            @Html.EditorFor(x => x.Stock, new { htmlAttributes = new { @class = "numerictextbox" } })
        </div>

        <div class="row">
            <div class="imagePreview">
                <label>Ürün Resmi</label><br />
                <img src="~/Areas/ManagerPanel/Assets/images/add_image.png" width="100" height="100" />
            </div>
            <div style="float:left; width:400px; padding-top:60px;">
                <input type="file" name="imageFile" class="textbox" />
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="row">
            @Html.EditorFor(x => x.IsActive, new { htmlAttributes = new { @id = "isActive" } })
            <label for="isActive"> Ürün aktifleştirilsin mi ?</label>
        </div>

        <div>
            <input type="submit" value="Ürün Düzenle" class="formbutton" />
        </div>
    }
</div>

